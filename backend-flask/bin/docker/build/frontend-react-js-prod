#! /usr/bin/bash

docker build \
--build-arg REACT_APP_BACKEND_URL="https://api.cruddur.space" \
--build-arg REACT_APP_AWS_PROJECT_REGION="us-east-1" \
--build-arg REACT_APP_AWS_COGNITO_REGION="us-east-1" \
--build-arg REACT_APP_AWS_USER_POOLS_ID="${REACT_APP_AWS_USER_POOLS_ID}" \
--build-arg REACT_APP_CLIENT_ID="${REACT_APP_CLIENT_ID}" \
-t frontend-react-js \
-f Dockerfile.prod \
.